{
    "name": "instapage/avro-php",
    "description": "Avro schema encoder/decoder. Fork of rg/avro-php",
    "license": "Apache-2.0",
    "replace": {
        "flix-tech/avro-php": "^4.1.0"
    },
    "require": {
        "php": ">=7.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.0"
    },
    "suggest": {
        "ext-gmp": "Large integer support for 32-bit platforms.",
        "ext-zlib": "Zlib support for Deflate codec.",
        "ext-snappy": "Snappy support for Snappy codec (mainly Google)."
    },
    "autoload": {
        "classmap": ["lib/"]
    }
}
